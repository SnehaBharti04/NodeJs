
<div class="row">
  <div class="col-sm-4">
     <form action="/admin/categories/create" method="post">
       <div class="form-group">
        <h1>Create Categories</h1>

        <label for="name">
            Name
        </label>
          <input type="text" name="name" id="" placeholder="Enter name">
          <button class="btn btn-primary" ="submit">create</button>
       </div>
     </form>
     <div class="col-sm-8">
        <table class = "table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
          {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{date}}</td>
                </tr>
           {{/each}}

            </tbody>
        </table>
     </div>

  </div>
</div>
<h1>Comments</h1>

<table class="table">
  <thead>

    <tr>
      <th>Id</th>
      <th>Owner</th>
      <th>Status</th>
      <th>Date</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    {{#each comments}}
      <tr>
        <td>{{_id}}</td>
        <td>{{user.firstName}}</td>
        <td><input data-id="{{_id}}" type="checkbox" {{#if approveComment}} checked {{/if}} name="approveComment"/></td>
        <td>{{generateDate date "MMMM Do YYYY"}}</td>
        <td>
          <form action="/admin/comments/{{_id}}?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">DELETE</button>
          </form>
        </td>

      </tr>
    {{/each}}

  </tbody>

</table>